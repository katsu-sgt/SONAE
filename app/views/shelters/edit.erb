<div class="container">
  <h1>避難所編集</h1>
  <div class="row">
    <%= form_with model: @item, local: true do |f| %>
      <div class="field">
        <%= f.label :名称 %><br />
        <%= f.text_field :shelter_name, size: "100x1" %>
      </div>
      <div class="field">
      <%= f.label :住所 %><br />
      <%= f.text_field :address %>
    </div>
      <div class="field">
        <%= f.label :交換時期 %><br />
        <%= f.date_field :replacement %>
      </div>
      <div class="field">
        <%= f.label :メモ %><br />
        <%= f.text_field :shelter_memo, size: "100x1" %>
      </div>
      <div class="mt-3">
        <%= f.submit "編集" %>
      </div>
    <% end %>
  </div>
</div>