<div class="container">
  <div class="row title">
    <h3 class="mx-auto">避難所リスト編集</h3>
  </div>
 <%= form_with model: @shelter, local: true do |f| %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col" class="col-3 text-center">#</th>
        <th scope="col" class="col-9">入力欄</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row" class="text-center">名称</th>
        <td><%= f.text_field :shelter_name, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row" class="text-center">住所</th>
        <td><%= f.text_field :address, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row" class="text-center">メモ</th>
        <td><%= f.text_area :shelter_memo, class: "form-control" %></td>
      </tr>
      <tr>
        <td colspan="2">
          <div class="text-center">
            <%= f.submit " 送 信 ", class: "btn btn-outline-secondary" %>
          </div>
        </td>
    </tbody>
  </table>
  <% end %>
</div>