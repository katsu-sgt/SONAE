<h4>item作成</h4>
<div class="row">
  <table>
    <%= form_with model: @item, local: true do |f| %>
    <thead>
      <tr>
        <th>品名</th>
        <th>個数</th>
        <th>交換時期</th>
        <th>メモ</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= f.text_field :item_name %></td>
        <td><%= f.number_field :number, min: 1, max: 100 %></td>
        <td><%= f.date_field :replacement %></td>
        <td><%= f.text_field :item_memo, size: "50x1" %></td>
        <td><%= f.submit "送信" %></td>
      </tr>
      </tbody>
    <% end %>
  </table>
</div>
