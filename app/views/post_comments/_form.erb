<%= form_with( model: [ post, post_comment ] ) do |f| %>
  <div class="row mb-3">
    <div class="col-lg-8 mx-auto">
      <%= f.text_area :comment, placeholder: "コメントを入力する", class: "form-control" %>
    </div>
    <div class="col-lg-2">
      <%= f.submit "送信", class: "mt-4 btn btn-outline-secondary btn-sm" %>
    </div>
  </div>
<% end %>