<% if user_signed_in? && post.favorited_by?(current_user) %>
  <%= link_to post.favorites.count, post_favorites_path(post), class: "fas fa-heart text-danger", method: :delete, remote: true %>
<% else %>
  <%= link_to post.favorites.count, post_favorites_path(post), class: "far fa-heart text-body", method: :post, remote: true %>
<% end %>
