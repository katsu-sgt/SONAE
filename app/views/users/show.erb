<div class="container">
  <% if user_signed_in? && @user.id == current_user.id %>
    <div class="row title">
      <h3 class="mx-auto">マイページ</h3>
    </div>
  <% else %>
    <div class="row title">
      <h3 class="mx-auto">ユーザー詳細</h3>
    </div>
  <% end %>
  <% if  user_signed_in? && @user.id == current_user.id %>
    <div class="row my-3">
      <div class="col-lg-6 mx-auto d-flex">
        <div class="mr-2">
            <%= link_to "ブックマーク一覧", user_bookmarks_path(current_user.id), class: "btn btn-outline-secondary" %>
          </div>
          <div class="mr-2">
            <%= link_to "マイリスト", items_path, class: "btn btn-outline-secondary" %>
          </div>
          <div class="mr-2">
            <%= link_to "プロフィールを編集", edit_user_path(current_user.id), class: "btn btn-outline-secondary" %>
          </div>
      </div>
    </div>
  <%  end %>
  <%= render 'users/user_card', user: @user %>
    <div class="row title">
      <h3 class="mb-3 mx-auto"><%= @user.name%>の投稿一覧</h3>
    </div>
    <div class="row">
      <!--投稿カード-->
      <%= render 'posts/index', posts: @posts %>
  </div>
</div>