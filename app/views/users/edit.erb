<div class="container">
  <div class="row title">
    <h3 class="mx-auto">プロフィール編集</h3>
  </div>
  <%= render "users/users_errors", user: @user %>
  <%= form_with model: @user, local: true do |f| %>
  <div class="p-3">
    <div class="field">
      <%= f.label :ユーザー名 %><br />
      <%= f.text_field :name, autocomplete: "username", class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :年齢 %><br />
      <%= f.number_field :age, min: 0, max: 100, class: "form-select" %>
    </div>
    <div class="field">
      <%= f.label :性別 %> <br />
      <%= f.select :sex, User.sexes.keys.map {|k| [k, k]}, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :職業 %><br />
      <%= f.text_field :job, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :自己紹介 %><br />
      <%= f.text_area :profile, class: "form-control", style: "height: 150px" %>
    </div>
    <div class="field">
      <%= f.label :プロフィール画像 %><br />
      <%= f.attachment_field :image %>
    </div>
    <div class="mt-3">
      <%= f.submit " 更 新 ", class: "btn btn-outline-secondary" %>
    </div>
    <!--退会ボタンを表示-->
    <div class="mt-5 text-center">
      <%= link_to "SONAEを退会する", user_registration_path, method: :delete, class: "btn btn-outline-danger", data: {confirm: "本当に退会しますか？"} %>
    </div>
  </div>
  <% end %>
</div>