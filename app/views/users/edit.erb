<div class="container">
  <h1>プロフィール編集</h1>
  <div class="row">
    <div>
      <%= form_with model: @user, local: true do |f| %>
        <div class="field">
          <%= f.label :ユーザー名 %><br />
          <%= f.text_field :name, autocomplete: "username" %>
        </div>
        <div class="field">
          <%= f.label :年齢 %><br />
          <%= f.number_field :age, min: 0, max: 100 %>
        </div>
        <div class="field">
          <%= f.label :性別 %><br />
          <%= f.select :sex, User.sexes.keys.map {|k| [k, k]} %>
        </div>
        <div class="field">
          <%= f.label :職業 %><br />
          <%= f.text_field :job %>
        </div>
        <div class="field">
          <%= f.label :自己紹介 %><br />
          <%= f.text_area :profile, size: "50x4" %>
        </div>
        <div class="field">
          <%= f.label :プロフィール画像 %><br />
          <%= f.attachment_field :image %>
        </div>
        <div class="mt-3">
          <%= f.submit "更新" %>
        </div>
        <!--退会ボタンを表示-->
        <div class="mt-3">
          <%= link_to "退会する", user_registration_path, method: :delete, class: "btn btn-outline-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>