<div class="row">
    <div class="col-lg-10 d-flex">
      <!--ユーザープロフィール画像-->
      <div class="mr-3">
        <%= link_to (attachment_image_tag user, :image, size: '100x100', fallback: "avatar.jpg"), user_path(user.id) %>
      </div>
      <!--ユーザー情報-->
      <div class="d-inline">
        <p class="m-0">名前：<%= user.name %></p>
        <p class="m-0">年齢：<%= user.age %></p>
        <p class="m-0">性別：<%= user.sex %></p>
        <p class="m-0">職業：<%= user.job %></p>
      </div>
      <!--ユーザー自己紹介文-->
      <div class="profile ml-5">
        <%= user.profile%>
      </div>
    </div>
  </div>
  <div class="row mt-1">
    <div class="col-lg-10 d-flex">
      <!--投稿数-->
      <div class="col-lg-2">
        <p>投稿数<%= user.posts.count%></p>
      </div>
    </div>
  </div>