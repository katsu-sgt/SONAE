<div class="container">
  <h2>新規登録</h2>

  <%= form_with model: @user, url: user_registration_path, id: "new_user", class: "new_user", local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    
    <div class="field">
      <%= f.label :ユーザー名 %><br />
      <%= f.text_field :name, autocomplete: "username" %>
    </div>
    
    <div class="field">
      <%= f.label :年齢 %><br />
      <%= f.number_field :age, min: 0, max: 100 %>
    </div>
    
    <div class="field">
      <%= f.label :性別 %><br />
      <%= f.select :sex, User.sexes.keys.map {|k| [k, k]} %>
    </div>
  
    <div class="field">
      <%= f.label :職業 %><br />
      <%= f.text_field :job %>
    </div>
  
    <div class="field">
      <%= f.label :自己紹介 %><br />
      <%= f.text_area :profile, size: "50x4" %>
    </div>
    
    <div class="field">
      <%= f.label :プロフィール画像 %><br />
      <%= f.attachment_field :image %>
    </div>
  
    <div class="field">
      <%= f.label :パスパード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上入力してください)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  
    <div class="field">
      <%= f.label :パスワード（確認） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  
    <div class="actions mt-1">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
  <div class="mt-3">
    <span>登録済みの方はこちらから</span>
    <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-success" %>
  </div>
</div>