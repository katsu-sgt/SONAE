<div class="container">
  <div class="row title">
    <h3 class="mx-auto">ログイン</h3>
  </div>
  <%= form_with model: @user,url: user_session_path, local: true do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  
    <div class="actions mt-1">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
  
  
  <div class="mt-3">
      <span>登録がまだの方はこちらから</span>
      <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-success" %>
  </div>
</div>