<div class="container">
  <div class="row title">
    <h3 class="mx-auto">ログイン</h3>
  </div>
  <%= form_with model: @user,url: user_session_path, local: true do |f| %>
  <div class="p-3">
    <div class="field row">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field row">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="actions mt-3 row">
      <%= f.submit "ログイン", class: "btn btn-outline-dark" %>
    </div>
  </div>
  <% end %>


  <div class="mt-3">
    <span>登録がまだの方はこちら</span>
    <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-success" %>
  </div>
</div>