<div class="container">
  <h1>編集</h1>
  <div class="row">
    <%= form_with model: @post, local: true do |f| %>
      <div class="field">
        <%= f.label :タイトル %><br />
        <%= f.text_field :title, size: "100x1" %>
      </div>
      <div class="field">
        <%= f.label :タイトル画像 %><br />
        <%= f.attachment_field :post_image %>
      </div>
      <div class="field">
        <%= f.label :本文 %><br />
        <%= f.text_area :content, size: "100x10" %>
      </div>
      <div>
        <%= f.text_field :tag_ids,value: @tag_list, placeholder: "タグを複数つけるには','で区切ってください。" %>
      </div>
      <div class=" d-flex">
        <div class="mt-3">
          <%= f.submit "送信" %>
        </div>
        <% if @post.user.id == current_user.id %>
          <div class="ml-auto">
            <%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-sm btn-outline-danger mt-3" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>