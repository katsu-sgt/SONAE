<div class="container">
  <div class="row title">
    <h3 class="mx-auto">投稿編集</h3>
  </div>
  <%= render "posts/posts_errors", post: @post %>
  <%= form_with model: @post, local: true do |f| %>
  <div class="p-3">
    <div class="field row">
      <%= f.label :タイトル %><br />
      <%= f.text_field :title, class: "form-control"%>
    </div>
    <div class="field row">
      <%= f.label :投稿画像 %>：
      <%= f.attachment_field :post_image %>
    </div>
    <div class="field row">
      <%= f.label :本文 %><br />
      <%= f.text_area :content, class: "form-control", style: "height: 150px" %>
    </div>
    <div class="field row">
      <%= f.label :タグ%><br />
      <%= f.text_field :tag_ids, value: @tag_list, class: "form-control", placeholder: "タグを複数付けるときは , で区切ってください"%>
    </div>
    <div class="mt-3 row">
      <%= f.submit "送信", class: "btn btn-outline-dark" %>
    </div>
  </div>
  <% end %>
  <div class="mt-3 row">
    <%= link_to "投稿を削除", post_path, method: :delete, class: "btn btn-outline-danger mx-auto", data: {confirm: "本当に削除しますか？"} %>
  </div>
</div>