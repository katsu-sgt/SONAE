<div class="container">
  <h1>投稿作成</h1>
  <div class="row">
    <%= form_with model: @post, local: true do |f|  %>
      <div class="field">
        <%= f.label :タイトル %><br />
        <%= f.text_field :title, size: "100x1" %>
      </div>
      <div class="field">
        <%= f.label :タイトル画像 %><br />
        <%= f.attachment_field :post_image %>
      </div>
      <div class="field">
        <%= f.label :本文 %><br />
        <%= f.text_area :content, size: "100x10" %>
      </div>
      <div>
        <%= f.text_field :tag_ids, class: "form-control", id: 'tag_ids', placeholder: "タグを複数付けるときは','で区切ってください"%>
      </div>
      <div class="mt-3">
        <%= f.submit "送信" %>
      </div>
    <% end %>
  </div>
</div>