<div class="container">
  <h1>投稿ユーザー</h1>
  <%= render 'users/user_card', user: @post.user %>
  
  <h1>投稿詳細</h1>
  <div class="row mt-3">
    <h2><%= @post.title %></h2>
  </div>
  <div class="row mt-3">
    <%= attachment_image_tag @post, :post_image, fallback: "noimage.jpg", size: "400x250" %>
  </div>
  <div class="row mt-3">
    <p><%= @post.content %></p>
  </div>
</div>