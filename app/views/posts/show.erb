<div class="container">
  <h1>投稿ユーザー</h1>
  <%= render 'users/user_card', user: @post.user %>

  <h1>投稿詳細</h1>
  <div class="row mt-3">
    <h2><%= @post.title %></h2>
  </div>
  <div class="row mt-3">
    <span>
      タグ：
      <% @post.tags.each do |tag| %>
        <%= tag.tag_name %>
      <% end %>
    </span>
  </div>
  <div class="row mt-3">
    <!--いいねボタン-->
    <div class="favorite-btn-<%= @post.id %>">
      <%= render 'favorites/favorite-btn', post: @post %>
    </div>
    <!--ブックマークボタン-->
    <div class="bookmark-btn-<%= @post.id %>">
      <%= render 'bookmarks/bookmark-btn', post: @post %>
    </div>
  </div>
  <div class="row mt-3">
    <%= attachment_image_tag @post, :post_image, fallback: "noimage.jpg", size: "400x250" %>
  </div>
  <div class="row mt-3">
    <p><%= @post.content %></p>
  </div>
  <div class="row">
    <% if  user_signed_in? && @post.user.id == current_user.id %>
      <div class="col-lg-2 ml-auto">
        <%= link_to "編集", edit_post_path(@post), class: "btn btn-outline-success" %>
      </div>
    <% end %>
  </div>
  <!--コメント作成欄-->
  <%= render "post_comments/form", post: @post, post_comment: @post_comment %>
  <!--コメント一覧-->
  <div id="comments">
    <%= render "post_comments/index", post: @post %>
  </div>
</div>